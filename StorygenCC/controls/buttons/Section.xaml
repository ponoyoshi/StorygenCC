<UserControl x:Class="StorygenCC.controls.buttons.Section"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StorygenCC.controls.buttons"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="150">
    <Grid>
        <Button BorderThickness="0" Background="#1D1D1D" HorizontalContentAlignment="Left" Margin="0,0,0,3" Click="SelectSection">
            <TextBlock Foreground="Gray" FontFamily="Arial" FontWeight="Bold" Margin="5" Name="UIName">New Section</TextBlock>
        </Button>
    </Grid>
</UserControl>